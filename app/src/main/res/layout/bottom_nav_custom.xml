<?xml version="1.0" encoding="utf-8"?>
<!-- bottom_nav_custom.xml
     Menú inferior persistente SOLO ICONOS (sin texto).
     5 posiciones siempre visibles.
     Orden (izq->der): buscar, coleccion, mazo, perfil, inicio (home siempre a la derecha).
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="5"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white">

    <!-- Slot 1: BUSCAR -->
    <LinearLayout
        android:id="@+id/slot1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/icon_slot1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/buscar"
            android:contentDescription="Buscar" />
    </LinearLayout>

    <!-- Slot 2: COLECCION (Mis Cartas) -->
    <LinearLayout
        android:id="@+id/slot2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/icon_slot2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/coleccion"
            android:contentDescription="Colección" />
    </LinearLayout>

    <!-- Slot 3: MAZO -->
    <LinearLayout
        android:id="@+id/slot3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/icon_slot3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/mazo"
            android:contentDescription="Mazos" />
    </LinearLayout>

    <!-- Slot 4: PERFIL -->
    <LinearLayout
        android:id="@+id/slot4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/icon_slot4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/perfil"
            android:contentDescription="Perfil" />
    </LinearLayout>

    <!-- Slot 5: INICIO (HOME) - siempre en la derecha -->
    <LinearLayout
        android:id="@+id/slot5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/icon_slot5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/inicio"
            android:contentDescription="Inicio" />
    </LinearLayout>

</LinearLayout>
