<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollDetalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/cont_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImagenGrande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imagen_carta"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Separador visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/tvNombreDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Carta"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Aquí mostramos tipos y rareza (puedes separarlos luego si quieres chips) -->
        <TextView
            android:id="@+id/tvTipoRareza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo — Rareza"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/tvSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set: Nombre del set"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Botón para añadir la carta al mazo -->
        <Button
            android:id="@+id/btnAnadirMazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anadir_al_mazo"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:elevation="4dp"
            android:backgroundTint="@color/purple_700"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <!-- Sección Ataques -->
        <TextView
            android:id="@+id/tvAtaquesTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ataques"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary" />

        <LinearLayout
            android:id="@+id/llAtaques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Sección Habilidades -->
        <TextView
            android:id="@+id/tvHabilidadesTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilidades"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary" />

        <LinearLayout
            android:id="@+id/llHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Indicador y mensaje de error/carga -->
        <ProgressBar
            android:id="@+id/pbDetalle"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMensajeDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorSecondary"/>

    </LinearLayout>
</ScrollView>
