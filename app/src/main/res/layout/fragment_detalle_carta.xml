<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingTop="0dp"
        android:paddingBottom="88dp"> <!-- dejamos espacio para la barra inferior -->

        <!-- groupDetalle: container that your fragment shows/ hides -->
        <LinearLayout
            android:id="@+id/groupDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen grande: ahora muestra la carta completa sin recortar -->
            <ImageView
                android:id="@+id/ivCarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="@string/detalle_imagen_carta"
                android:src="@drawable/placeholder_carta"/>

            <!-- Contenedor de contenido con padding -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tvNombreCarta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre carta"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tvTipoRarity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo â€” Rareza"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginTop="4dp"/>

                <!-- fila con HP, LocalId, Retiro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvHP"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="HP: -" />

                    <TextView
                        android:id="@+id/tvLocalId"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="No. set" />

                    <TextView
                        android:id="@+id/tvRetreat"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Retreat: -" />
                </LinearLayout>

                <!-- Tipos, Evoluciona de -->
                <TextView
                    android:id="@+id/tvTipos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipos: -"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvEvoluciona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evoluciona de: -"
                    android:layout_marginTop="4dp"/>

                <!-- Debilidades / Resistencias -->
                <TextView
                    android:id="@+id/tvWeakRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deb/Resist: -"
                    android:layout_marginTop="8dp"/>

                <!-- Ataques (lista simple) -->
                <TextView
                    android:id="@+id/tvAtaquesHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ataques"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvAtaques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No hay ataques"
                    android:layout_marginTop="6dp"/>

                <!-- Otros datos -->
                <TextView
                    android:id="@+id/tvIllustrator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ilustrador: -"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvFlavor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flavor text"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvSetInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set: -"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- tvError overlay: shown centered when there is an error -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_carta_no_encontrada"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center"
        android:padding="16dp"/>

    <!-- Barra inferior con botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurface">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnadirMiColeccion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:text="@string/anadir_al_mazo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverDetalle"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Volver" />

    </LinearLayout>

    <!-- Progress overlay -->
    <ProgressBar
        android:id="@+id/pbCargando"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
