<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDetalleCarta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/pbCargando"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/error_carta_no_encontrada"
        android:textColor="@color/error_red"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Grupo con el detalle que mostraremos si hay carta -->
    <LinearLayout
        android:id="@+id/groupDetalle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAnadirMiColeccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivCarta"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/detalle_imagen_carta"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder_carta"/>

        <TextView
            android:id="@+id/tvNombreCarta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre carta"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvTipoRarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo — Rareza"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_600"/>

        <TextView
            android:id="@+id/tvAtaques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ataques"
            android:textSize="14sp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

    <!-- Botón añadir a mi colección (fijo abajo) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAnadirMiColeccion"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/anadir_al_mazo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnVolverDetalle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"/>

    <!-- Botón volver (derecha del añadir) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverDetalle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
