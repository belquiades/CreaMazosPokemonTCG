<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvOlvidasteContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Ha olvidado la contraseña?"
            android:textAlignment="textEnd"
            android:textColor="#007BFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnIniciarSesionGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar con Google"
            android:background="@drawable/google_button_background"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿No estás registrado? Regístrate"
            android:textAlignment="center"
            android:textColor="#007BFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>