<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMisCartas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Título simple -->
    <TextView
        android:id="@+id/tvTituloMisCartas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mis cartas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView con la lista de cartas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMisCartas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="96dp"   <!-- espacio para el menú inferior / fab -->
    app:layout_constraintTop_toBottomOf="@id/tvTituloMisCartas"
    app:layout_constraintBottom_toTopOf="@+id/fabAnadir"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Vista para cuando no hay cartas (estado vacío) -->
    <LinearLayout
        android:id="@+id/layoutVacio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTituloMisCartas"
        app:layout_constraintBottom_toTopOf="@+id/fabAnadir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvMensajeVacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes cartas en tu colección"
            android:textSize="16sp"
            android:paddingBottom="12dp"/>

        <!-- Botón con signo + grande que lleva al buscador -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabVacioAgregar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:fabSize="normal"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Agregar carta"
            app:backgroundTint="@color/purple_700"
            android:tint="@color/white"/>
    </LinearLayout>

    <!-- Botón flotante para añadir cartas manualmente (siempre visible) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAnadir"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        android:contentDescription="Añadir carta"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/purple_700"
        android:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/menuInferior"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nota: este include asume que en la Activity está el menu inferior con id menuInferior.
         Si usas Activity diferente, ajusta la constraint app:layout_constraintBottom_toTopOf -->
    <View
        android:id="@+id/menuInferior"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
