<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMisCartas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Texto cuando no hay cartas -->
    <TextView
        android:id="@+id/tvVacio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No tienes cartas en tu colección.\nPulsa + para añadir desde el buscador."
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- RecyclerView con cartas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMisCartas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fabAnadirCarta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB + para añadir cartas (si lista vacía navegará al buscador) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAnadirCarta"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="Añadir carta"
        android:src="@drawable/ic_plus"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="16dp"
    app:useCompatPadding="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
