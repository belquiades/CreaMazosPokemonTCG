<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- LOGIN -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.cesar.creamazospoketcg.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registroFragment"
            app:destination="@id/registroFragment" />

        <action
            android:id="@+id/action_loginFragment_to_recuperarPasswordFragment"
            app:destination="@id/recuperarPasswordFragment" />

        <!-- Navegar a Perfil tras login -->
        <action
            android:id="@+id/action_loginFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />

        <!-- (Opcional) Mantengo la acción a búsqueda si la usas directamente -->
        <action
            android:id="@+id/action_loginFragment_to_fragmentoBusquedaCartas"
            app:destination="@id/fragmentoBusquedaCartas" />
    </fragment>

    <!-- REGISTRO -->
    <fragment
        android:id="@+id/registroFragment"
        android:name="com.cesar.creamazospoketcg.ui.auth.RegistroFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_registro">

        <action
            android:id="@+id/action_registroFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- RECUPERAR PASSWORD -->
    <fragment
        android:id="@+id/recuperarPasswordFragment"
        android:name="com.cesar.creamazospoketcg.ui.auth.RecuperarPasswordFragment"
        android:label="Recuperar Password"
        tools:layout="@layout/fragment_recuperar_password">

        <action
            android:id="@+id/action_recuperarPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- PERFIL -->
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.cesar.creamazospoketcg.ui.auth.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil">

        <!-- Volver explícitamente al login (útil al cerrar sesión) -->
        <action
            android:id="@+id/action_perfilFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

        <!-- Navegar a Mis Cartas desde Perfil -->
        <action
            android:id="@+id/action_perfilFragment_to_fragmentoMisCartas"
            app:destination="@id/fragmentoMisCartas" />
    </fragment>

    <!-- BÚSQUEDA -->
    <fragment
        android:id="@+id/fragmentoBusquedaCartas"
        android:name="com.cesar.creamazospoketcg.ui.search.FragmentoBusquedaCartas"
        android:label="Buscar Cartas"
        tools:layout="@layout/fragment_busqueda_cartas">

        <action
            android:id="@+id/action_busqueda_to_detalle"
            app:destination="@id/fragmentoDetalleCarta" />
    </fragment>

    <!-- DETALLE (usado por búsqueda) -->
    <fragment
        android:id="@+id/fragmentoDetalleCarta"
        android:name="com.cesar.creamazospoketcg.ui.search.FragmentoDetalleCarta"
        android:label="Detalle Carta"
        tools:layout="@layout/fragment_detalle_carta" />

    <!-- MIS CARTAS -->
    <fragment
        android:id="@+id/fragmentoMisCartas"
        android:name="com.cesar.creamazospoketcg.ui.miscartas.FragmentoMisCartas"
        android:label="Mis Cartas"
        tools:layout="@layout/fragment_mis_cartas">

        <action
            android:id="@+id/action_misCartas_to_detalleCartaLocal"
            app:destination="@id/fragmentoDetalleCartaLocal" />
    </fragment>

    <!-- DETALLE LOCAL (desde Mis Cartas) -->
    <fragment
        android:id="@+id/fragmentoDetalleCartaLocal"
        android:name="com.cesar.creamazospoketcg.ui.miscartas.FragmentoDetalleCartaLocal"
        android:label="Detalle Carta (Mi Lista)"
        tools:layout="@layout/fragment_detalle_carta_local" />

</navigation>
