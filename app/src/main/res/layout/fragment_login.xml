<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_login.xml (versión reforzada para garantizar orden vertical) -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <!-- Contenedor vertical principal: aseguramos orientation="vertical" explícito -->
    <LinearLayout
        android:id="@+id/llRootLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="28dp"
        android:paddingBottom="32dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logoappbig"
            android:contentDescription="@string/desc_logo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp" />

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:hint="@string/hint_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:hint="@string/hint_password"
            android:layout_marginTop="12dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mensaje y 'Olvidaste' -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvErrorPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/error_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOlvidaste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_olvidaste"
                android:textColor="@color/purple_700"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- CONTENEDOR EXPLÍCITO PARA BOTÓN CONTINUAR -->
        <LinearLayout
            android:id="@+id/contBtnContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinuar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/text_continuar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_gradient"
                app:backgroundTint="@null"
                android:clickable="true" />
        </LinearLayout>

        <!-- SEPARADOR (siempre después del CONTINUAR) -->
        <LinearLayout
            android:id="@+id/separadorO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/line_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="o"
                android:textColor="@color/gray_400" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/line_gray" />
        </LinearLayout>

        <!-- CONTENEDOR EXPLÍCITO PARA BOTÓN GOOGLE (siempre después del separador) -->
        <LinearLayout
            android:id="@+id/contBtnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llBtnGoogle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_google_button"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivGoogleIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google24x24"
                    android:contentDescription="@string/text_google"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tvGoogleTexto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/text_google"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Texto registro -->
        <TextView
            android:id="@+id/tvNoTienesCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_no_tienes"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:autoLink="none"
            android:linksClickable="true" />

    </LinearLayout>
</ScrollView>
