<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Imagen grande -->
    <ImageView
        android:id="@+id/ivImagenCarta"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:contentDescription="@string/detalle_imagen_carta"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder_carta" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/tvNombreCarta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Carta"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivImagenCarta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo (tipo — rareza) -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo — Rareza"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreCarta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ataques -->
    <TextView
        android:id="@+id/tvAtaques"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Ataques..."
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
        app:layout_constraintBottom_toTopOf="@id/guideline_actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/pbCargando"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Guideline top of actions area -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.78"
        android:orientation="horizontal" />

    <!-- Botón acciones (Eliminar / Añadir a mazo / Crear mazo) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAcciones"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Acciones"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAtaques"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón volver -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Volver"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAcciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
