<?xml version="1.0" encoding="utf-8"?>
<!--
  fondo_chip_tipo.xml
  Versión simplificada y robusta del drawable para chips de tipos.
  - Fondo sólido (color por defecto, se puede tintar desde código).
  - Esquinas redondeadas y borde sutil.
  - Tamaño mínimo para que el chip tenga altura adecuada.
-->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color por defecto (gris claro). Desde código puedes aplicar tint si quieres -->
    <solid android:color="#DDDDDD" />

    <!-- Bordes redondeados -->
    <corners android:radius="16dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#BBBBBB" />

    <!-- Tamaño mínimo del chip (alto) para que el texto no quede aplastado -->
    <size android:height="36dp" />
</shape>
